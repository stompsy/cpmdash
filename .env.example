# .env.example
# Copy this file to .env for local development. Railway will inject its own env vars.

# --- CORE SETTINGS ---
# Set to True for local development, False for production
DEBUG=True

# Set to 'production' for deployed environments
ENVIRONMENT=development

# Generate a new secret key for production. This is fine for local.
SECRET_KEY=your-secret-key
ENCRYPT_KEY=your-encrypt-key

# --- DATABASE ---
# Your local PostgreSQL connection string
DATABASE_URL=postgres://postgres:postgres@localhost:5432/cpmdash

# --- NETWORKING ---
# For local development, this is usually sufficient.
ALLOWED_HOSTS="localhost,127.0.0.1"

# For local development, allowing all origins is fine.
CORS_ALLOW_ALL_ORIGINS=True

# No trusted origins needed when CORS allows all.
CSRF_TRUSTED_ORIGINS="https://localhost"

# --- Map provider ---
JAWG_ACCESS_TOKEN=your-jawg-access-token

# --- Weather provider ---
OPEN_WEATHER_MAP_ACCESS_TOKEN=your-owm-access-token
