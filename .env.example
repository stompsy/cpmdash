# .env.example
# Copy this file to .env for local development. Railway will inject its own env vars.

# Core Django
DEBUG=true                 # Set to false in production
SECRET_KEY=changeme        # Replace with a strong secret in production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (Railway Postgres plugin usually sets DATABASE_URL automatically)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cpmdash

# CORS
CORS_ALLOW_ALL_ORIGINS=true

# Runtime / process control
PORT=8000                  # Railway sets PORT dynamically; container honors it
WEB_CONCURRENCY=4          # Gunicorn worker count
COLLECTSTATIC_AT_RUNTIME=0 # Set to 1 to re-run collectstatic on startup
